<Window x:Class="TestNewDesign.View.Windows.WIMOMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestNewDesign.View.Windows"
        mc:Ignorable="d"
        Title="WIMOMainWindow" WindowStartupLocation="CenterScreen" Style="{StaticResource WIMOStandardWindow}">
    <Grid Height="Auto" Width="Auto">
        <Grid.RowDefinitions>
            <RowDefinition Height="27"/>
            <RowDefinition Height="573*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="735*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        <Button Style="{StaticResource SystemButton}"  Content="X" Grid.Column="1" Command="{Binding Path=ExitCommand}"/>
        <Frame Grid.Row="1" Grid.ColumnSpan="3" Content="{Binding Path=CurrentPage, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</Window>
